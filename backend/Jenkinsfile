// ~/projects/medihealth/backend/Jenkinsfile

pipeline {
    agent any
    environment {
        DOCKER_REGISTRY_CREDENTIALS_ID = 'dockerhub-credentials'
        DOCKERHUB_USERNAME = 'virtualviking98'
        DOCKER_IMAGE_NAME = 'medihealth-backend'
    }
    stages {
        stage('Build & Test') {
            agent { docker { image 'node:20-alpine' } }
            steps {
                dir('backend') {
                    echo 'Installing dependencies inside the backend directory...'
                    sh 'npm install'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def imageTag = env.GIT_COMMIT.take(8)
                    env.FULL_IMAGE_NAME = "${DOCKERHUB_USERNAME}/${DOCKER_IMAGE_NAME}:${imageTag}"
                    echo "Building Docker image: ${env.FULL_IMAGE_NAME}"
                    // The build context is now the backend subfolder
                    sh "docker build -f backend/Dockerfile.dev -t ${env.FULL_IMAGE_NAME} backend/"
                }
            }
        }
        // ... Push and Deploy stages remain the same ...
        stage('Push Docker Image') {
            steps {
                echo "Logging in and pushing image to Docker Hub..."
                withDockerRegistry([credentialsId: DOCKER_REGISTRY_CREDENTIALS_ID]) {
                    sh "docker push ${env.FULL_IMAGE_NAME}"
                }
            }
        }
        stage('Deploy') {
            steps {
                echo "Logging in and pushing image to Docker Hub..."
                withDockerRegistry([credentialsId: DOCKER_REGISTRY_CREDENTIALS_ID]) {
                    sh "docker push ${env.FULL_IMAGE_NAME}"
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}